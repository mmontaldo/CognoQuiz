<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/spacebkg"
    tools:context="com.example.mitch.cognoquizapp.GameActivity">

    <Button
        android:id="@+id/questionbox"
        android:text="If you and an elephant were floating in space and you pushed on the elephant, which of you would move away from the starting point faster?"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:clickable="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="70dp"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            >

            <Button
                android:id="@+id/answerA"
                android:text="You"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="10dp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/answerB"
                android:text="The Elephant"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="10dp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonshape"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            >

            <Button
                android:id="@+id/answerC"
                android:text="Both would move the same speed"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="sans-serif-light"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="10dp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/answerD"
                android:text="The Duck"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="10dp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonshape"
                android:textStyle="bold"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
