<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/spacebkg"
    tools:context="com.example.mitch.cognoquizapp.View.LoginScreenActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/LoginCharacterImageView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/cogno"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cogno&apos;s Quiz"
        android:id="@+id/textView"
        android:layout_above="@+id/LoginCharacterImageView"
        android:textSize="35dp"
        android:layout_alignParentLeft="false"
        android:layout_alignLeft="@+id/LoginCharacterImageView"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Log In"
        android:id="@+id/login"
        android:layout_marginStart="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:background="#B4000000"
        android:textColor="#CCffffff"
        android:textSize="25dp"
        android:onClick="logInButtonClick"
        android:fontFamily="sans-serif-light"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:layout_below="@+id/login"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/login"
        android:layout_marginTop="10dp"
        android:background="#B4000000"
        android:textColor="#CCffffff"
        android:textSize="25dp"
        android:onClick="signUpButtonClick"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        >

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:padding="10dp"
            android:singleLine="true"
            android:hint="Email"
            android:textColorHint="#bbbbbb"
            android:textColor="#000000"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:drawableLeft="@drawable/email"
            android:editable="true" />
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_default_bg"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:singleLine="true"
            android:hint="User Name"
            android:textColorHint="#bbbbbb"
            android:textColor="#000000"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:drawableLeft="@drawable/user"
            android:editable="true" />
        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_bg"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:singleLine="true"
            android:hint="Password"
            android:textColorHint="#bbbbbb"
            android:textColor="#000000"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:password="true"
            android:drawableLeft="@drawable/password"
            android:editable="true" />

    </LinearLayout>

    <Button
        android:id="@+id/login2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="220dp"
        android:padding="10dp"
        android:text="Log In"
        android:background="#B4000000"
        android:textColor="#CCffffff"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:onClick="logInButton2Click"
        />
    <Button
        android:id="@+id/signup2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="220dp"
        android:padding="10dp"
        android:text="Sign Up"
        android:background="#B4000000"
        android:textColor="#CCffffff"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:onClick="signUpButton2Click"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:background="#B4000000"
        android:textColor="#CCffffff"
        android:textSize="12dp"
        android:fontFamily="sans-serif-light"
        android:onClick="backButtonClick"/>


</RelativeLayout>
