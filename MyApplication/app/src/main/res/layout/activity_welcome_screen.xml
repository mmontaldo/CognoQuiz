<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/spacebkg"
    tools:context="com.example.mitch.cognoquizapp.WelcomeScreenActivity">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/newgame"
            android:text="NEW GAME"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:textStyle="bold"
            android:onClick="newGameClick"/>

        <Button
            android:id="@+id/highscores"
            android:text="HIGH SCORES"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/newgame"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:onClick="highScoresClick"/>

        <Button
            android:id="@+id/playerprofile"
            android:text="PLAYER PROFILE"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/highscores"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:onClick="playerProfileClick"/>


    </LinearLayout>


</RelativeLayout>
